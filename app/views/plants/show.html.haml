- provide(:title, @plant.common_name)
= link_to 'Â« Back to plants', plants_path, class: 'btn btn-primary', title: 'List of all plants'
.row
  %aside.col-md-12
    %section
      %h1= @plant.common_name.capitalize
      %h2
        %em= @plant.scientific_name.capitalize
      - if @plant.invasive
        %h2.invasive Invasive!
      %hr
    %section
      .col-md-3
        .plant_photo= image_tag @plant.photo.url(:default), alt: "Photo of #{@plant}"
      .col-md-8
        %section
          %p
            %strong Description:
            = @plant.description
          .citation= @plant.citation
          %p
            %strong Habitat type:
            = @plant.habitat_type
          %p
            %strong Tolerance:
            = @plant.tolerance
    - if current_user&.admin?
      .btn-group
        = link_to 'Edit', edit_plant_path(@plant), class: 'btn btn-primary edit-btn right-btn', title: "Edit #{@plant}"
        = link_to 'Delete', @plant, method: :delete, data: { confirm: "Delete #{@plant.common_name}?" }, class: 'btn btn-primary edit-btn danger-btn', title: "Delete #{@plant}"
      .btn.download-plant-btn
        = link_to 'Download QR-Code', { action: 'download_qr' }, 'data-turbolinks': false, title: "QR-Code for #{@plant}"
