.row
  .col-md-6.col-md-offset-3
    = form_for(@plant_sample, html: { multipart: true }) do |f|
      = form_errors_for(@plant_sample)
      = f.label :collected_on, 'Collection date'
      = f.date_field :collected_on, class: 'form-control'
      = f.label :plot_id, 'Plot'
      = f.collection_select :plot_id, @plots, :id, :name, include_blank: 'Choose...'
      = f.label :plant_id, 'Plant'
      = f.collection_select :plant_id, @plants, :id, :common_name, include_blank: 'Choose...'
      = f.label :abundance
      = f.text_field :abundance, class: 'form-control'
      = f.label :percent_cover
      = f.text_field :percent_cover, class: 'form-control'
      = f.label :photo
      = f.file_field :photo, class: 'form-control'
      = f.submit class: 'btn btn-primary'
